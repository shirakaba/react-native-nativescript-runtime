{
  "name": "react-native-nativescript-runtime",
  "version": "0.1.0",
  "description": "Use the NativeScript runtime in a React Native app!",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "resources",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-nativescript-runtime.podspec",
    "scripts/build-nativescript.js",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "postinstall": "ts-patch install",
    "build": "npm run build:types && npm run build:main && npm run build:module",
    "build:main": "rimraf ./lib/commonjs && tsc --project tsconfig.build.commonjs.json",
    "build:module": "rimraf ./lib/module && tsc --project tsconfig.build.module.json",
    "build:types": "rimraf ./lib/typescript && tsc --project tsconfig.build.types.json",
    "prepare": "npm run build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/shirakaba/react-native-nativescript-runtime",
  "author": "Jamie Birch <14055146+shirakaba@users.noreply.github.com> (https://github.com/shirakaba)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shirakaba/react-native-nativescript-runtime/issues"
  },
  "homepage": "https://github.com/shirakaba/react-native-nativescript-runtime#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/plugin-transform-classes": "^7.14.4",
    "@commitlint/config-conventional": "^11.0.0",
    "@nativescript/core": "^8.0.6",
    "@nativescript/types-android": "^8.0.1",
    "@nativescript/types-ios": "^8.0.1",
    "@nativescript/webpack": "^4.1.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.14.25",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.0",
    "release-it": "^14.2.2",
    "rimraf": "^3.0.2",
    "ts-patch": "^1.3.3",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "no-undef": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "src/bridge/",
    "resources/webpack.config.js",
    "example/nativescript"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "configFile": "./babel.config.commonjs.js"
        }
      ],
      [
        "module",
        {
          "configFile": "./babel.config.module.js"
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "ts-node": "^10.0.0"
  }
}
